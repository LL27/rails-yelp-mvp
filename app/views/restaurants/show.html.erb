<div class="container">

  <div class="card">

    <div class="card-body">

     <h1><%= @restaurant.name %></h1>
      <small> <%= @restaurant.category %></small>
      <p><%= @restaurant.address %></p>

    <p>Phone number: <%= @restaurant.phone_number %>

    </div>

  </div>




  <div class="card-body reviews">
    <h2>Reviews</h2>
      <% @restaurant.reviews.each do |review| %>
         <p><%= review.content %> <%= review.rating %></p>
      <% end %>
      <%= link_to "Back to list", restaurants_path %>
      <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>

  </div>

</div>
